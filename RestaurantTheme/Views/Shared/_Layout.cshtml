<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Restaurant</title>
    <link id="themeStylesheet" rel="stylesheet" href="~/css/light.css">
</head>
<body>
    <nav class="navbar navbar-custom">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Restaurant</a>
            <button id="themeToggle" class="btn theme-toggle">Dark Mode</button>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer-custom">
        <p>&copy; 2025 Restaurant. All rights reserved.</p>
    </footer>

    <script>
        document.getElementById("themeToggle").addEventListener("click", function() {
            let themeLink = document.getElementById("themeStylesheet");
            if (themeLink.getAttribute("href").includes("light.css")) {
                themeLink.setAttribute("href", "/css/dark.css");
                this.textContent = "Light Mode";
            } else {
                themeLink.setAttribute("href", "/css/light.css");
                this.textContent = "Dark Mode";
            }
        });
    </script>
</body>
</html>
